@using Auto.Web.Core
@model List<Auto.Core.Models.Make>
@{
    ViewBag.Title = "Makes";
}

<div class="row">
    <div class="small-12 large-12 columns"><h2>Makes</h2></div>
</div>

<div class="row">
    <div class="small-6 large-6 columns"><h4>Name</h4></div>
    <div class="small-5 large-5 columns"></div>
    <div class="small-1 large-1 columns"></div> 
</div>

<div id="makes">
@foreach (var m in Model)
{
    <div class="row" data-id="@m.Id">
        <div class="small-6 large-6 columns">@m.Name</div>
        <div class="small-5 large-5 columns"></div>
        <div class="small-1 large-1 columns"><a href="#" class="button expand btn-del btn-del-make" data-id="@m.Id" data-reveal-id="confirm-delete">-del</a></div>
    </div>
}
</div>

<div class="row">
    <div class="small-12 large-12 columns"><a href="#" class="button large btn-add btn-add-make" data-id="@Helper.CurrentUser.Id">+add</a></div>
</div>

<div id="confirm-delete" class="reveal-modal tiny" data-reveal>
    <h2>Are you sure you'd like to delete this make?  All cars in the database with this make will be deleted.</h2>
    <a href="#" class="button alert">Delete</a>
    <a href="#" class="button reveal-close">Cancel</a>
</div>

<script id="make_row" type="text/html">
    <div class="row">
        <div class="small-6 large-6 columns">{{Name}}</div>
        <div class="small-5 large-5 columns"></div>
        <div class="small-1 large-1 columns"><a href="#" class="button expand btn-del btn-del-make" data-id="{{Make.Id}}">-del</a></div>
    </div>
</script>